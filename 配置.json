{
  // nlp配置
  "nlp": {
    //分词
    "segment": {
      "args": {
        "dict": ["HanNLP"],
        "index": ["HanNLP"],
        "shortest": ["HanNLP"],
        "nlp": ["HanNLP"],
        "crf": ["HanNLP"],
        "hmm": ["HanNLP"],
        "stanford": ["StanfordNLP"],
        "NLPir": ["NLPir"],
        "fudan": ["FdNLP"]
      },
      "allowedNext": {
        "nlp": ["pos", "ner"],
        "counter": "counter",
        "pattern":["matches"]
      }
    },
    // 词性
    "pos": {
      "args":{
        "crf": ["HanNLP"],
        "hmm": ["HanNLP"],
        "stanford": ["StanfordNLP"],
        "fudan": ["FdNLP"]
      },
      "allowedNext":{
        "nlp": ["pos", "ner"],
        "counter": "counter",
        "pattern":["matches"]
      }
    },
    // 实体识别
    "ner": {
      "args":{
        "crf": ["HanNLP"],
        "hmm": ["HanNLP"],
        "stanford": ["StanfordNLP"],
        "fudan": ["FdNLP"]
      },
      "allowedNext":{
        "nlp": ["pos", "ner"],
        "counter": "counter",
        "pattern":["matches"]
      }
    },
    // 关键字
    "keyword": {
      "args": "size",
      "allowedNext":{
        "nlp": ["pos", "ner"],
        "pattern":["matches"]
      }
    },
    // 摘要
    "summary": {
      "args": "size",
      "allowedNext": {
        "nlp": ["segment","keyword","summary","textClassification"],
        "pattern":["find"]
      }
    },
    // 文本分类
    "textClassification": {
      "args": {},
      "allowedNext": {}
    }
  },
  // 词频
  "counter":{
    "args":{
      "filter": {"exclude":[",","。"]},
      "sort":"asc|desc"
    },
    "allowedNext": {
      "nlp": ["pos", "ner"],
      "pattern":["matches","find"]
    }
  },
  // 模式匹配
  "pattern":{
    "matches":{
      "args":{
        "rule":[
          {"regx":"\\d"}
        ]
      },
      "allowedNext": {
        "counter": "counter"
      }
    },
    "find":{
      "args":{
        "rule":[
          {"regx":"\\d"}
        ]
      },
      "allowedNext": {
        "counter": "counter"
      }
    }
  },
  // 关联信息
  "related":{
    "baidu":{
      "args":{},
      "allowedNext": {}
    },
    "aminer":{
      "args":{},
      "allowedNext": {}
    },
    "journal":{
      "args":{},
      "allowedNext": {}
    },
    "literature":{
      "args":{},
      "allowedNext": {}
    }
  }
}